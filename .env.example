# Copy this file to .env and configure your settings

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
WORKERS=4

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Printing Configuration
MAX_QUEUE_SIZE=10000
MAX_RETRIES=3
RETRY_DELAY=2000
PROCESSING_TIMEOUT=30000
BATCH_SIZE=10
MAX_CONCURRENT_JOBS=50
PRINTER_HEALTH_CHECK_INTERVAL=30000

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=5
LOG_MAX_SIZE=20m

# Service Configuration
SERVICE_NAME=PrintServer
SERVICE_DISPLAY_NAME=High Performance Print Server
SERVICE_DESCRIPTION=Node.js print server for label printing with TypeScript
SERVICE_PATH=C:\PrintServer
NODE_PATH=C:\Program Files\nodejs\node.exe

# Performance Tuning
MAX_REQUEST_SIZE=50mb
SERVER_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Development Settings
ENABLE_CORS=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=60000
METRICS_UPDATE_INTERVAL=5000
CLEANUP_INTERVAL=300000

# Windows Specific Settings
PRINTER_DISCOVERY_INTERVAL=60000
TEMP_FILE_CLEANUP_INTERVAL=300000
IE_PRINT_TIMEOUT=30000